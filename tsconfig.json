{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2022",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmit": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "typeRoots": ["types/types.d.ts", "node_modules/@types"],
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": ["node_modules", "dist"]
}